<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.caronanafacul.mobile.android.activity.CaronaFormActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"

        android:columnCount="6"
        android:layout_margin="15dp">

        <TextView android:text="Ponto de Partida"
            android:layout_row="0"
            android:layout_gravity="left"
            android:layout_column="0" />

        <EditText android:ems="10"
            android:layout_row="1"
            android:layout_gravity="right"
            android:layout_width="371dp"
            android:layout_column="0"
            android:id="@+id/etPontoPartida" />

        <TextView android:text="Horário(hh:mm)"
            android:layout_row="2"
            android:layout_gravity="left"
            android:layout_column="0" />

        <EditText android:ems="10"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_width="190dp"
            android:inputType="time"
            android:id="@+id/etHorario" />

        <TextView  android:text="Tolerância(Minutos)" android:layout_column="0" android:layout_gravity="left"
            android:layout_row="4" />

        <EditText  android:ems="10"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_width="190dp"
            android:inputType="number"
            android:id="@+id/etTolerancia" />

        <TextView  android:text="Vagas"
            android:layout_row="6"
            android:layout_gravity="left"
            android:layout_column="0" />

        <EditText  android:ems="10"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_width="90dp"
            android:numeric="integer"
            android:id="@+id/etVagas" />

    </GridLayout>

</LinearLayout>
